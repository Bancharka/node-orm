<h2>Add Database Entry</h2>

<form action="/add" method="post">
  {{#if error }}
    <div class="msg--error">
      {{ error }}
    </div>
  {{/if}}

  <div class="form-group">
    <label for="name">Database Name:</label>
    <input type="text" id="name" name="name" value="{{ name }}" autofocus>
  </div>

  <div class="form-group">
    <label for="type">Database Type:</label>
    <select name="type">
      <option></option>
      {{#each databaseTypes}}
        <option
          value="{{this}}"
          {{#if (eq this @root.type)}} selected{{/if}}
        >
          {{this}}
        </option>
      {{/each}}
    </select>
  </div>

  <button type="submit">Add Database</button>
</form>
